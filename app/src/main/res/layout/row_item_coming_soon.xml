<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/biru">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_poster_coming_soon"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_img_cooming_soon"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_judul_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/putih"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_poster_coming_soon"
        app:layout_constraintTop_toTopOf="@+id/iv_poster_coming_soon"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_genre_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/putih"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_poster_coming_soon"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_coming_soon"
        tools:text="Genre" />

    <TextView
        android:id="@+id/tv_rate_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_star"
        android:text="7"
        android:drawablePadding="5dp"
        android:textColor="@color/putih"
        app:layout_constraintBottom_toBottomOf="@+id/tv_genre_coming_soon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_judul_coming_soon" />


</androidx.constraintlayout.widget.ConstraintLayout>